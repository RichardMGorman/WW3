!
!     !/T  Enable test output.
!
! 10. Source code :
!
!/ ------------------------------------------------------------------- /

    USE W3ODATMD, ONLY: SCREEN
!/S      USE W3SERVMD, ONLY: STRACE

    IMPLICIT NONE

    TYPE(NML_FIELD_T), INTENT(IN) :: NML_FIELD
!/S      INTEGER, SAVE                           :: IENT = 0

!/S      CALL STRACE (IENT, 'REPORT_FIELD_NML')

      WRITE (MSG,'(A)') 'FIELD % '
      WRITE (SCREEN,'(A)')
      WRITE (SCREEN,10) TRIM(MSG),'TIMESTART  = ', TRIM(NML_FIELD%TIMESTART)
      WRITE (SCREEN,10) TRIM(MSG),'TIMESTRIDE = ', TRIM(NML_FIELD%TIMESTRIDE)
      WRITE (SCREEN,10) TRIM(MSG),'TIMECOUNT  = ', TRIM(NML_FIELD%TIMECOUNT)

      WRITE (SCREEN,11) TRIM(MSG),'TIMESPLIT  = ', NML_FIELD%TIMESPLIT
      WRITE (SCREEN,10) TRIM(MSG),'LIST       = ', TRIM(NML_FIELD%LIST)
      WRITE (SCREEN,10) TRIM(MSG),'PARTITION  = ', TRIM(NML_FIELD%PARTITION)
      WRITE (SCREEN,13) TRIM(MSG),'SAMEFILE   = ', NML_FIELD%SAMEFILE
      WRITE (SCREEN,11) TRIM(MSG),'TYPE       = ', NML_FIELD%TYPE


10  FORMAT (A,2X,A,A)
11  FORMAT (A,2X,A,I1)
13  FORMAT (A,2X,A,L1)

  END SUBROUTINE REPORT_FIELD_NML

